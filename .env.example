# DTM Web App - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ============================================================
# SUPABASE
# ============================================================
# Get these from: Supabase Dashboard → Settings → API

# Public URL (safe to expose to frontend)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Public anon key (safe to expose to frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service role key (KEEP SECRET - only for server-side operations)
# WARNING: Never expose this in client-side code!
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================
# NEXT.JS
# ============================================================
# Development: http://localhost:3000
# Production: https://your-app.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================================
# Vercel Analytics (included in Pro plan)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry (error tracking)
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# ============================================================
# OPTIONAL: FEATURE FLAGS
# ============================================================
# Enable experimental features
NEXT_PUBLIC_ENABLE_RECORDING=false
NEXT_PUBLIC_ENABLE_COLLABORATION=false
NEXT_PUBLIC_ENABLE_MIDI_IMPORT=false

# ============================================================
# DEVELOPMENT ONLY
# ============================================================
# Show debug information
NEXT_PUBLIC_DEBUG=false

# Mock audio engine (for testing without sound)
NEXT_PUBLIC_MOCK_AUDIO=false
